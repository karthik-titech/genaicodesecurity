# Google Home Security Patch Configuration

# Server Configuration
PORT=3000
NODE_ENV=development

# Security Configuration
STRICT_MODE=false
MAX_CONTEXT_SIZE=10000
MAX_TOOL_CHAINING=3

# Logging Configuration
LOG_LEVEL=info

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Cache Configuration
REDIS_URL=redis://localhost:6379

# Security Thresholds
THREAT_THRESHOLD_LOW=0.1
THREAT_THRESHOLD_MEDIUM=0.3
THREAT_THRESHOLD_HIGH=0.6
THREAT_THRESHOLD_CRITICAL=0.8

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session Configuration
SESSION_TTL=3600
CONFIRMATION_TTL=300

# Google Home Integration
GOOGLE_HOME_API_KEY=your_google_home_api_key_here
GOOGLE_HOME_PROJECT_ID=your_project_id_here

# Calendar Integration
GOOGLE_CALENDAR_API_KEY=your_calendar_api_key_here
CALENDAR_WEBHOOK_SECRET=your_webhook_secret_here

# Database Configuration (if using persistent storage)
DATABASE_URL=sqlite:./security_patch.db

# Monitoring and Alerting
ALERT_WEBHOOK_URL=https://your-alerting-service.com/webhook
SECURITY_EMAIL=security@yourcompany.com

# Development Settings
DEBUG=false
ENABLE_TEST_ENDPOINTS=true
